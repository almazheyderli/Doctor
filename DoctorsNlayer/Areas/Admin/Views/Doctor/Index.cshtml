@using Doctors.Core.Models;
@model List<Doctor>
@{
    int count = 0;
}
<div class="container">

    <h1> Doctors

        <a class="btn btn-primary" asp-action="Create" asp-controller="Doctor">Create</a>

    </h1>
    <div class="row">
<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">FullName</th>
            <th scope="col">Description</th>
            <th scope="col">ImgUrl</th>
        </tr>
    </thead>
    <tbody>
                @foreach(var item in Model)
                {
                    count++;

                <tr>
            <th scope="row">@count</th>
            <td>@item.FullName</td>
            <td>@item.Description</td>
            <td>
                <div style="width:100px">
                    <img width="100%" src="~/Upload/Service/@item.ImgUrl" />
                </div>

            </td>
            <td>  
                <a class=" btn btn-danger" asp-action="Delete" asp-controller="Doctor" asp-route-id="@item.Id"> Delete </a>
                <a class="btn btn-info" asp-action="Update" asp-controller="Doctor" asp-route-id="@item.Id">Update  </a>
            </td>
          
        </tr>
                }
      
    </tbody>
</table>
</div>
</div>